extends ../layout
block head
  link(rel='stylesheet', href='/stylesheets/dataTables.bootstrap.css')

block content
    .page-header
      h1 Device Detail
      h4 #{uberDevice.dev_desc}.contegix.mgmt
    .container
      .row
        .col-md-12
          .panel.panel-default
            .panel-heading
              p Monitoring Events
                span.label.label-default.pull-right #{sensuClient.name} / #{sensuClient.address}
            .panel-body
              table.table.table-condensed
                thead
                  tr
                    th Status
                    th Check
                    th Issued
                    th Flapping
                    th Count
                    th(data-defaultsort='disabled').visible-lg Output
                tbody
                  each event in sensuEvents
                    tr(class="#{getEventClass(event.status)}")
                      td #{getEventClass(event.status)}
                      td #{event.check}
                      td #{getFormattedTimestamp(event.issued)}
                      td #{event.flapping}
                      td #{event.occurrences}
                      td.visible-lg #{event.output.slice(0,65)}
      .row
        .col-md-12
          .panel.panel-default
            .panel-heading Ticket List
            .panel-body
              table(id="table_tickets").table.table-condensed
                thead
                  tr
                    th Created
                    th Priority
                    th Type
                    th Assignee
                    th Subject
                    th Touched
                tbody
      .row
        .col-md-6
          .panel.panel-default
            .panel-heading System Stats
            .panel-body
              p Operating System
                span.pull-right #{puppetInfo.facts.operatingsystem} #{puppetInfo.facts.operatingsystemrelease}
              p Kernel
                span.pull-right #{puppetInfo.facts.kernel} #{puppetInfo.facts.kernelrelease}
              p Uptime
                span.pull-right #{puppetInfo.facts.uptime}
              p Manufacturer Information
                span.pull-right #{puppetInfo.facts.manufacturer} #{puppetInfo.facts.productname} Serial (#{puppetInfo.facts.serialnumber})
              p Interfaces
                span.pull-right Management: #{puppetInfo.facts.interface_mgmt} Public: #{puppetInfo.facts.interface_public}
              p Catalog Timestamp
                span.pull-right #{getFormattedISO8601(puppetInfo.catalog_timestamp)}
              p Facts Timestamp
                span.pull-right #{getFormattedISO8601(puppetInfo.facts_timestamp)}
              p Report Timestamp
                span.pull-right #{getFormattedISO8601(puppetInfo.report_timestamp)}
        .col-md-6
          .panel.panel-default
            .panel-heading Ubersmith Information
            .panel-body
              p Type:
                span.pull-right #{uberDevice.devtype_group}/#{uberDevice.type}
              p Active:
                span.label.label-success.pull-right #{uberDevice.active}
              p Location:
                span.pull-right #{uberDevice.location}
              p Company:
                span.pull-right
                  a(href="/ubersmith/clients/clientid/#{uberDevice.clientid}") #{uberDevice.company}
              p Contact Information:
                ul.list-group
                  li.list-group-item Email:
                    span.pull-right #{uberDevice.email}
                  li.list-group-item Phone:
                    span.pull-right #{uberDevice.phone}
      .row
        .col-md-14
          .panel.panel-default
            .panel-heading Puppet Facts
            .panel-body
              table(id="table_facts").table.table-condensed
                thead
                  tr
                    th Fact
                    th Value
                tbody

block footer
  script(src='/javascripts/jquery.dataTables.min.js')
  script(src='/javascripts/dataTables.bootstrap.js')
  script(type='text/javascript').
    $(document).ready(function() {
      $('#table_tickets').dataTable( {
        "sDom": "<'row'<'span6'l><'span6'f>r>t<'row'<'span6'i><'span6'p>>",
        "sPaginationType": "bootstrap",
        "sAjaxSource": '/ubersmith/devices/list/deviceid/#{uberDevice.dev}/tickets',
        "iDisplayLength": 10,
        "bSortClasses": false,
        "aoColumns": [
          {
            "mData": "timestamp"
          }, {
            "mData": "priority"
          }, {
            "mData": "type"
          }, {
            "mData": "admin_username"
          }, {
            "mData": "subject",
            "mRender": function (subject, type, row) {
              return '<a href="/ubersmith/tickets/ticketid/' + row['ticket_id'] + '">' + subject.slice(0,65) + '</a>';
            }
          }, {
            "mData": "activity"
          }],
        "aaSorting": [[0,'desc'],[1, 'asc']],
        "oLanguage": {
          "sLengthMenu": "_MENU_ records per page"
        }
      });
    });

  script(type='text/javascript').
    $(document).ready(function() {
      $('#table_facts').dataTable( {
        "sDom": "<'row'<'span6'l><'span6'f>r>t<'row'<'span6'i><'span6'p>>",
        "sPaginationType": "bootstrap",
        "sAjaxSource": '/puppet/nodes/#{uberDevice.dev_desc}.contegix.mgmt/facts',
        "iDisplayLength": 10,
        "bSortClasses": false,
        "aoColumns": [
          {
            "mData": "name"
          }, {
            "mData": "value",
          }],
        "aaSorting": [[1,'asc']],
        "oLanguage": {
          "sLengthMenu": "_MENU_ records per page"
        }
      });
    });